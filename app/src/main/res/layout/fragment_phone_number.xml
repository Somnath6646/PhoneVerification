<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.phoneverification.data.PhoneAuthViewModel" />
    </data>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragments.PhoneNumberFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:gravity="center">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phone_auth_enter"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|bottom"
                        android:text="Enter your phone number"
                        android:layout_margin="15dp"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_style"
                            android:inputType="phone"
                            android:text="@={viewModel.phoneNumber}"
                            android:padding="15dp"
                            android:hint="e.g   +911234567890"
                            android:layout_margin="10dp"
                            android:elevation="1dp"
                            android:textSize="16dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="meetcrypter will send you an OTP to continue. Data charges may apply"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom|center">


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                    <Button
                        android:id="@+id/verify"
                        android:background="@drawable/btn_style"
                        android:textAllCaps="false"
                        android:paddingLeft="70dp"
                        android:paddingRight="70dp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()-> viewModel.verify(verify)}"
                        android:text="Verify" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

</layout>
